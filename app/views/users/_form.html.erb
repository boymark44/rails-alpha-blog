<!-- A partial for creating and editing an article -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/form_errors', obj: @user %> <!-- Render the errors partial -->
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: {turbo: false}) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">  
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %> 
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">  
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">  
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mb-3 mt-3">
          <div class="col-2">
            <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-light btn-sm") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center mb-3">
    <div class="col-10 text-center">
      <%= link_to "Cancel and Return to Articles Listing Page", articles_path, class: "btn btn-outline-secondary" %>
    </div>
  </div> 
</div>
