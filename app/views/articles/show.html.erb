<h1> Showing article details </h1>

<%# Embedded Ruby tags: %>
<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Description: </strong><%= @article.description %></p>


<div style="display: inline-block;">
  <%= button_to "Edit", edit_article_path(@article), method: :get %> 
</div>

<div style="display: inline-block;">
  <%= button_to "Delete", article_path(@article), method: :delete, data: { turbo_confirm: "Are you sure?" }, redirect_to: articles_path %>
</div>

<div style="display: inline-block;">
  <%= button_to "Back", articles_path, method: :get %> 
</div>



