<%#The views for all the articles.%>
<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title%></td>
        <td><%= article.description%></td>
        <td><%= button_to 'Show', article_path(article), method: :get %></td>
        <%# Use the edit_article_path helper method to create a path to the edit action for the article %>
        <td><%= button_to 'Edit', edit_article_path(article), method: :get %></td> 
        <td><%= button_to 'Delete', article_path(article), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this article?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= button_to "Create New Article", new_article_path, method: :get %>
<br>
<%= button_to "Go to Homepage", root_path, method: :get %>